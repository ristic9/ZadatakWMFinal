@model  ZadatakWM.Models.Proizvod
@{
    Layout = null;
}
@using (Html.BeginForm("AddOrEdit", "Proizvod", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.id); //for koji pravi ove form groupe u zavisnosti od podataka
    <div class="form-group">
        @Html.LabelFor(model => model.naziv)
        @Html.EditorFor(model => model.naziv)
        @Html.ValidationMessageFor(model => model.naziv)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.opis)
        @Html.EditorFor(model => model.opis)
        @Html.ValidationMessageFor(model => model.opis)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.kategorija)
        @Html.EditorFor(model => model.kategorija)
        @Html.ValidationMessageFor(model => model.kategorija)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.proizvodjac)
        @Html.EditorFor(model => model.proizvodjac)
        @Html.ValidationMessageFor(model => model.proizvodjac)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.dobavljac)
        @Html.EditorFor(model => model.dobavljac)
        @Html.ValidationMessageFor(model => model.dobavljac)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.cena)
        @Html.EditorFor(model => model.cena)
        @Html.ValidationMessageFor(model => model.cena)
    </div>

    <div class="form-group">
        <input type="submit" />
    </div>
}
